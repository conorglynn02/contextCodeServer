{
    "server": {
        "isRemote": false,
        "local": {
            "base": "http://127.0.0.1:5000"
        },
        "remote": {
            "base": "http://beans"
        },
        "api": {
            "endpoints": {
                "post_metric_snapshot": "/add_snapshot",
                "get_all_metrics": "/get_all_metrics",
                "get_metric_snapshot": "/get_metric_snapshot"
            }
        }
    },
    "database": {
        "engine_string": "sqlite:///db/my_db.db?check_same_thread=False"
    },
    "logging_config": {
        "console_output": {
            "enabled": true,
            "level": "DEBUG",
            "colour": {
                "DEBUG": "blue",
                "INFO": "green",
                "WARNING": "yellow",
                "ERROR": "light_red",
                "CRITICAL": "red,bg_white"
            },
            "format": "%(levelname).1s:[%(name)s]> %(message)s -> %(asctime)s",
            "date_format": "%d-%m-%Y %H:%M:%S"
        },
        "file_output": {
            "enabled": true,
            "level": "WARNING",
            "format": "%(asctime)s -%(levelname)s - %(name)s -  %(pathname)s:%(lineno)d - %(message)s",
            "date_format": "%d-%m-%Y %H:%M:%S",
            "log_dir": "logs",
            "filename": "app.log",
            "max_bytes": 10485760,
            "backup_count": 5
        }
    }
}